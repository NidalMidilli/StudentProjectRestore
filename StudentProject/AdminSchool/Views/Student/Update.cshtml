@using EntityLayer
@model EntityLayer.Student


            <!-- partial -->
      



<!-- Nucleo Icons -->


<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- partial -->
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-body">
                        <h4 class="card-title">
                            Student Update Page
                        </h4>
                        <form asp-action="Update" asp-controller="Student" method="post" class="text-start">
                            <div style="display:none" class="mb-3">
                                <label for="studentId" class="form-label">Student Id</label>
                                <input readonly asp-for="studentId" type="text" class="form-control">
                                </div>
                            <label class="form-label">Student Name</label>
                            <div class="input-group input-group-outline mb-2">
                              <input asp-for="studentName" type="text" class="form-control">
                            </div>
                            <label class="form-label">Student Surname</label>
                            <div class="input-group input-group-outline mb-3">
<input type="text" class="form-control" asp-for="studentSurname">
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2">ADD STUDENT</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


